{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':dependencyDashboard',
    ':semanticCommits',
    ':timezone(America/Toronto)',
    ':prHourlyLimit4',
  ],
  flux: {
    managerFilePatterns: [
      '/(^|/)flux/.+\\.ya?ml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/(^|/)flux/.+\\.ya?ml$/',
    ],
  },
  packageRules: [
    {
      matchManagers: [
        '*',
      ],
      minimumReleaseAge: '3 days',
    },
  ],
}
